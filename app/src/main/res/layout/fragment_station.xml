<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mvp.demo.fyl.luodao.mvp.view.fragment.StationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txt_begin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="起始地点:"
                android:gravity="center_vertical"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/edit_begin"
                android:background="@mipmap/et_bg"
                android:layout_width="280dp"
                android:gravity="center"
                android:hint="请输入起始地点"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_begin"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/txt_end"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="到达地点:"
                android:gravity="center_vertical"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/edit_end"
                android:background="@mipmap/et_bg"
                android:layout_width="280dp"
                android:gravity="center"
                android:hint="请输入到达地点"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/txt_end"
                android:layout_alignBottom="@+id/txt_end"
                android:layout_toRightOf="@+id/txt_end"
                android:layout_toEndOf="@+id/txt_end" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="起始时间:"
                android:gravity="center_vertical"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/edit_time"
                android:background="@mipmap/et_bg"
                android:layout_width="280dp"
                android:gravity="center"
                android:hint="请输入起始时间"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/txt_time"/>
        </RelativeLayout>
        <Button
            android:id="@+id/query_station"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="查询"
            android:textSize="20sp"
            android:background="#4f5fc4"
            android:textColor="#FFFFFFFF"/>
    </LinearLayout>

</FrameLayout>
